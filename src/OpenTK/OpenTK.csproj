<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net20</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RootNamespace>OpenTK</RootNamespace>
    <AssemblyName>OpenTK</AssemblyName>
    <RunCodeAnalysis>true</RunCodeAnalysis>
    <DefineConstants>WIN32;CARBON;X11;SDL2;OPENGL;OPENGLES</DefineConstants>
    <Platforms>AnyCPU</Platforms>
    <!--<CodeAnalysisRuleSet>..\..\stylecop.ruleset</CodeAnalysisRuleSet>-->
  </PropertyGroup>

  <PropertyGroup>
    <DefaultItemExcludes>$(DefaultItemExcludes);Platform\Android\*</DefaultItemExcludes>
    <DefaultItemExcludes>$(DefaultItemExcludes);Platform\iPhoneOS\*</DefaultItemExcludes>
  </PropertyGroup>

