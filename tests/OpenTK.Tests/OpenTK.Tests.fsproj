    <Compile Include="Vector2Tests.fs" />
    <Compile Include="Vector3Tests.fs" />
    <Compile Include="Vector4Tests.fs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="FsCheck.Xunit" Version="2.9.2" />
    <PackageReference Include="xunit" Version="2.2.0" />
    <PackageReference Include="FSharp.Core" Version="4.4.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\OpenTK.Tests.Generators\OpenTK.Tests.Generators.fsproj" />
    <ProjectReference Include="..\..\src\OpenTK\OpenTK.csproj" />
