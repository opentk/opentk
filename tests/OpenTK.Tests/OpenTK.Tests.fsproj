    <Name>OpenTK.Tests</Name>
    <StartAction>Program</StartAction>
    <StartProgram>packages\xunit.runner.console\tools\xunit.console.exe</StartProgram>
    <StartArguments>OpenTK.Tests.dll</StartArguments>
    <Platforms>AnyCPU;x86</Platforms>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
