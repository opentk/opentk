<!-- ================================ SYNOPSIS -->

    <refnamediv id="get_num_sub_groups">
        <refname>get_num_sub_groups</refname>

        <refpurpose>
            Returns the number of subgroups that the current 
workgroup is divided into.
        </refpurpose>
    </refnamediv>

