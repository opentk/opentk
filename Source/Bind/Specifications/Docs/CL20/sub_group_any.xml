<!-- ================================ SYNOPSIS -->

    <refnamediv id="sub_group_any">
        <refname>sub_group_any</refname>

        <refpurpose>
            Evaluates <varname>predicate</varname> for any work-items in the sub-group.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">int</link>
                    <function>
                        sub_group_any
                    </function>
                </funcdef>
                <paramdef><link xlink:href="scalarDataTypes.html">int</link><parameter>predicate</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>
    </refsynopsisdiv>

<!-- ================================ DESCRIPTION  -->

    <refsect1 id="description"><title>Description</title>
        <para>
            Evaluates <varname>predicate</varname> for all work-items in the 
            sub-group and returns a non-zero value if 
            <varname>predicate</varname> evaluates to non-zero for any workitems in the sub-group.
        </para>
    </refsect1>

