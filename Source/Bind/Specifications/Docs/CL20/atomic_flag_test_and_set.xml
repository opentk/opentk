<!-- ================================ SYNOPSIS -->

    <refnamediv id="atomic_flag_test_and_set">             
        <refname>atomic_flag_test_and_set functions</refname>

        <refpurpose>
            Atomically sets the value pointed to by <varname>object</varname> to true.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>

        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">bool</link>
                    <function>atomic_flag_test_and_set</function>
                </funcdef>
                <paramdef>volatile <link xlink:href="atomic_flag.html">atomic_flag</link>
                    <parameter>*object</parameter>
                </paramdef>
            </funcprototype>
        </funcsynopsis>

        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">bool</link>
                    <function>atomic_flag_test_and_set_explicit</function>
                </funcdef>
                <paramdef>volatile <link xlink:href="atomic_flag.html">atomic_flag</link>
                    <parameter>*object</parameter>
                </paramdef>
                <paramdef><link xlink:href="memory_order.html">memory_order</link><parameter>order</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>

        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">bool</link>
                    <function>atomic_flag_test_and_set_explicit</function>
                </funcdef>
                <paramdef>volatile <link xlink:href="atomic_flag.html">atomic_flag</link>
                    <parameter>*object</parameter>
                </paramdef>
                <paramdef><link xlink:href="memory_order.html">memory_order</link><parameter>order</parameter></paramdef>
                <paramdef><link xlink:href="memory_scope.html">memory_scope</link><parameter>scope</parameter></paramdef>    
            </funcprototype>
        </funcsynopsis>

    </refsynopsisdiv>

