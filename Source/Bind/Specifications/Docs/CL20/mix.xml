<!-- ================================ SYNOPSIS -->

    <refnamediv id="mix">
        <refname>mix</refname>

        <refpurpose>
            Linear blend of <varname>x</varname> and <varname>y</varname>.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    gentype
                    <function>
                        mix
                    </function>
                </funcdef>
                <paramdef>gentype<parameter>x</parameter></paramdef>
                <paramdef>gentype<parameter>y</parameter></paramdef>
                <paramdef>gentype<parameter>a</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>

        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    gentypef
                    <function>
                        mix
                    </function>
                </funcdef>
                <paramdef>gentypef<parameter>x</parameter></paramdef>
                <paramdef>gentypef<parameter>y</parameter></paramdef>
                <paramdef><link xlink:href="scalarDataTypes.html">float</link><parameter>a</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>

        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    gentyped
                    <function>
                        mix
                    </function>
                </funcdef>
                <paramdef>gentyped<parameter>x</parameter></paramdef>
                <paramdef>gentyped<parameter>y</parameter></paramdef>
                <paramdef><link xlink:href="scalarDataTypes.html">double</link><parameter>a</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>
    </refsynopsisdiv>

