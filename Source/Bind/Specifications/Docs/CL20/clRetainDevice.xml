<!-- ================================ SYNOPSIS -->

    <refnamediv id="clRetainDevice">
        <refname>
            clRetainDevice
        </refname>

        <refpurpose>
          Increments the <varname>device</varname> reference count.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">cl_int</link>
                    <function>clRetainDevice</function>
                </funcdef>
                <paramdef>
                    <link xlink:href="abstractDataTypes.html">cl_device_id</link>
                    <parameter>device</parameter>
                </paramdef>
            </funcprototype>
        </funcsynopsis>
    </refsynopsisdiv>

