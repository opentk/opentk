<!-- ================================ SYNOPSIS -->

    <refnamediv id="get_enqueued_num_sub_groups">
        <refname>get_enqueued_num_sub_groups</refname>

        <refpurpose>
            Returns the number of subgroups that the current 
workgroup is divided into.
        </refpurpose>
    </refnamediv>

    <!-- ALTERNATIVE SYNTAX SYNOPSIS (NON-FUNCTION) -->

    <refsect2 id="synopsis">
        <title>
        </title>

        <informaltable frame="none">
            <tgroup cols="1" align="left" colsep="0" rowsep="0">
                <colspec colname="col1" colnum="1" />
                <tbody>
                    <row>
                        <entry><citerefentry href="scalarDataTypes"><refentrytitle>uint</refentrytitle></citerefentry> <function>get_enqueued_num_sub_groups</function> ()</entry>
                    </row>
                </tbody>
            </tgroup>
        </informaltable>
    </refsect2>

<!-- ================================ DESCRIPTION  -->

    <refsect1 id="description"><title>Description</title>
        <para>
            Returns the same value as that returned by 
            <citerefentry><refentrytitle>get_num_sub_groups</refentrytitle></citerefentry> 
            if the kernel is executed with a uniform work-group size.
            If the kernel is executed with a non-uniform work-group 
            size, returns the number of sub groups in each of the 
            work groups that make up the uniform region
            of the global range.
        </para>
    </refsect1>

