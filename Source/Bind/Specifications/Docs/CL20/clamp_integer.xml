<!-- ================================ SYNOPSIS -->

    <refnamediv id="clamp">             
        <refname>clamp</refname>

        <refpurpose>
            Clamp <varname>x</varname> to range given by <varname>minval</varname>, <varname>maxval</varname>.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    gentype
                    <function>                   
                        clamp
                    </function>
                </funcdef>
                <paramdef>gentype<parameter>x</parameter></paramdef>    
                <paramdef>gentype<parameter>minval</parameter></paramdef>   
                <paramdef>gentype<parameter>maxval</parameter></paramdef>   
            </funcprototype>
        </funcsynopsis>     
   
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    gentype
                    <function>                   
                        clamp
                    </function>
                </funcdef>
                <paramdef>gentype<parameter>x</parameter></paramdef>    
                <paramdef>sgentype<parameter>minval</parameter></paramdef>  
                <paramdef>sgentype<parameter>maxval</parameter></paramdef>  
            </funcprototype>
        </funcsynopsis>   
    </refsynopsisdiv>   
    
<!-- ================================ DESCRIPTION  -->

    <refsect1 id="description"><title>Description</title>
        <para>
            <function>clamp</function> returns 
            <citerefentry href="integerMax"><refentrytitle>min</refentrytitle></citerefentry>
            (<citerefentry href="integerMax"><refentrytitle>min</refentrytitle></citerefentry>(
                <varname>x</varname>, <varname>minval</varname>), <varname>maxval</varname>).
        </para>

        <para>
            Results are undefined if <varname>minval</varname> &gt; <varname>maxval</varname>.
        </para>
    
    </refsect1>

