<!-- ================================ SYNOPSIS -->

    <refnamediv id="get_pipe_max_packets">
        <refname>get_pipe_max_packets</refname>

        <refpurpose>
            Returns the maximum number of packets specified when pipe was created.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">uint</link>
                    <function>
                        get_pipe_max_packets
                    </function>
                </funcdef>
                <paramdef>pipe gentype <parameter>p</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>

    </refsynopsisdiv>

<!-- ================================ DESCRIPTION  -->

    <refsect1 id="description"><title>Description</title>
        <para>
            Returns the maximum number of packets specified 
            when pipe <varname>p</varname> was created.
        </para>

        &pipeFunctionsInc;

    </refsect1>

