<!-- ================================ SYNOPSIS -->

    <refnamediv id="clUnloadPlatformCompiler">
        <refname>
            clUnloadPlatformCompiler
        </refname>

        <refpurpose>
            Allows the implementation to release the resources allocated by the OpenCL compiler for <varname>platform</varname>.
        </refpurpose>
    </refnamediv>

    <refsynopsisdiv xmlns:xlink="http://www.w3.org/1999/xlink"><title></title>
        <funcsynopsis>
            <funcprototype>
                <funcdef>
                    <link xlink:href="scalarDataTypes.html">cl_int</link>
 <function>clUnloadPlatformCompiler</function>
                </funcdef>
<paramdef><link xlink:href="abstractDataTypes.html">cl_platform_id</link><parameter>platform</parameter></paramdef>
            </funcprototype>
        </funcsynopsis>
    </refsynopsisdiv>

<!-- ================================ PARAMETERS -->
